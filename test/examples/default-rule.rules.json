{
  "name": "default-rule",

  "rules": [
    {
			"name": "Set commissions for Equities",
      "when": { "type": "productTypeCondition", "productType": "Equity" },
      "then": { "type": "setPercentualCommission", "percentualPoints": 1 }
    },
		{
			"name": "Set commissions for Options",
      "when": { "type": "productTypeCondition", "productType": "Option" },
			"then": { "type": "setPercentualCommission", "percentualPoints": 1.25 }
    },
		{
			"name": "Other products",
			"when": { "type": "default" },
			"then": { "type": "error", "message": "Unrecognized product" }
		}
  ]
}
