{
  "name": "nested-rules",

  "rules": [
		{
			"name": "CalculateCost for all products",
      "when": { "type": "always" },
      "then": { "type": "calculateCost" }
    },
    {
			"name": "Set commissions for Equities",
      "when": { "type": "productTypeCondition", "productType": "Equity" },
      "then": { "type": "setPercentualCommission", "percentualPoints": 1 }
    },
		{
			"name": "Set commissions for Options",
      "when": { "type": "productTypeCondition", "productType": "Option" },
			"then": {
				"name": "nested rule evaluation for options",
				"rules": [
					{
						"name": "On Call options",
			      "when": { "type": "optionTypeCondition", "optionType": "Call" },
			      "then": { "type": "setPercentualCommission", "percentualPoints": 1.1 }
			    },
					{
						"name": "On Put options",
						"when": { "type": "optionTypeCondition", "optionType": "Put" },
						"then": { "type": "setPercentualCommission", "percentualPoints": 0.9 }
					}
				]
			}
    }
  ]
}
